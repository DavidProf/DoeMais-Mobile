<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="28dp"
    android:id="@+id/listaMensagem">

    <TextView
        android:id="@+id/msgIntituicao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instituição"
        android:fontFamily="@font/timeless"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/msgCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Código"
        android:fontFamily="@font/timeless"
        android:layout_below="@+id/msgIntituicao"/>

    <TextView
        android:id="@+id/msgData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01/05/19"
        android:fontFamily="@font/timeless"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/msgIntituicao"/>

</RelativeLayout>