<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_toolbar"
    android:background="@color/colorDoeMaisAzul1"
    android:elevation="5dp"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo"
        android:layout_margin="4dp"
        />

    <TextView
        android:id="@+id/toolbarTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="23sp"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/multicolore"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/toolbarSair"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="Sair"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:fontFamily="@font/timeless"
        android:layout_gravity="right"
        android:gravity="center"
        android:layout_marginRight="2dp"
        android:background="@drawable/sair_background"
        android:elevation="8dp"
        android:visibility="invisible" />
</android.support.v7.widget.Toolbar>