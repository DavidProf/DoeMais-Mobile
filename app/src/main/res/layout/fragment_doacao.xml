<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFundo"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginHorizontal="11dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/container_background"
        android:elevation="5dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Histotico de Doações"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/multicolore"
            android:padding="8dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:background="@drawable/titulo_verde"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvDoacoes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5dp"
            tools:listitem="@layout/lista_doacoes" />
    </LinearLayout>


</LinearLayout>