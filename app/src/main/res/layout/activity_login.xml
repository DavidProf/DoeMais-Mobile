<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/colorFundo">

    <include layout="@layout/toolbar_doemais"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/colorWhite"
        android:textSize="30sp"
        android:fontFamily="@font/multicolore"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/titulo_background"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="60dp"
        android:elevation="5dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/container_background"
    android:layout_margin="30dp"
    android:layout_weight="1"
    android:elevation="5dp"
    android:orientation="vertical">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="20sp"
        android:fontFamily="@font/timeless"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:drawableLeft="@android:drawable/sym_action_email"
        android:hint="exemplo@exemplo.com"
        android:inputType="textEmailAddress"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha:"
        android:textSize="20sp"
        android:fontFamily="@font/timeless"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp" />


    <EditText
        android:id="@+id/edtSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@android:drawable/ic_lock_lock"
        android:hint="  **********"
        android:inputType="textPassword"
        android:maxLength="10"
        android:textSize="15sp" />


    <Button
        android:id="@+id/btnLogar"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="@drawable/botao_azul"
        android:text="Login"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/recupSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esqueceu  sua senha?"
        android:fontFamily="@font/timeless"
        android:textColor="@color/colorDoeMaisAzul2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:elevation="5dp"
        android:visibility="invisible"/>


</LinearLayout>
</LinearLayout>