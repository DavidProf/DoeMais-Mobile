<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/colorFundo">

    <include layout="@layout/toolbar_doemais"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/container_background"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="20dp"
        android:layout_weight="1"
        android:elevation="15dp"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/edtEmail"
            android:drawableLeft="@android:drawable/sym_action_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="10dp"
            android:inputType="textEmailAddress"
            android:hint="exemplo@exemplo.com"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senha"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>


        <EditText
            android:id="@+id/edtSenha"
            android:drawableLeft="@android:drawable/ic_secure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword"
            android:hint="  **********"/>


        <Button
            android:id="@+id/btnLogar"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/botao_azul"
            android:text="Login"
            android:textSize="15sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/recupSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esqueceu  sua senha?"
            android:fontFamily="@font/timeless"
            android:textColor="@color/colorDoeMaisAzul2"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:elevation="5dp"/>

    </LinearLayout>

</LinearLayout>
